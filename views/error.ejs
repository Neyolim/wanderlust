<% layout("/layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-center min-vh-100 ">
  <div class="card shadow-lg p-4 p-md-5 text-center" style="max-width: 500px; width: 100%; border-radius: 15px;">
    <!-- Optional error icon -->
    <div class="mb-3">
      <i class="fa-solid fa-triangle-exclamation fa-3x text-danger"></i>
    </div>

    <h2 class="fw-bold mb-3" style="color: #FF5A5F;">Oops! Something went wrong</h2>
    <p class="mb-4 text-muted"><%= message %></p>

    <a href="/listings" class="btn btn-danger rounded-pill px-4 py-2 shadow-sm">
      <i class="fa-solid fa-arrow-left me-2"></i>Go Back to Listings
    </a>
  </div>
</div>

<style>
  body {
    font-family: 'Poppins', sans-serif;
  }

  .card {
    background-color: #fff;
  }

  .btn-danger {
    background-color: #FF5A5F;
    border: none;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .btn-danger:hover {
    background-color: #e64b4f;
    transform: translateY(-2px);
  }

  .text-muted {
    font-size: 1rem;
  }
</style>

